meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
link(rel="stylesheet", href="/css/signup.css")
title Register Manager
form#signupForm(action="/signup", method="post")
  .form-container
    h1.head Register 
    .input-box
      input#name(type="text", placeholder="Fullname", name="name", required)
      span#nameError.error
    .input-box
      input#email(type="email", placeholder="Email", name="email", required)
      span#emailError.error
    .input-box
      input#tel(type="text", placeholder="Phone Number", name="tel", required)
      span#telError.error
    .input-box
      input#nin(type="text", placeholder="NIN", name="nin", required)
      span#ninError.error
    .input-box
      input#address(type="text", placeholder="Address", name="address", required)
      span#addressError.error
    .input-box
      input#username(type="text", placeholder="Username", name="username", required)
      span#usernameError.error
    .input-box
      input#password(type="password", placeholder="Password", name="password", required, minlength="6")
      span#passwordError.error
