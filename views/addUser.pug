doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Add stock
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css' integrity='sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==' crossorigin='anonymous' referrerpolicy='no-referrer')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='../css/add-stock.css')
aside.side-menu-container
  .logo-menu
    h2.logo MWF
    i.fa-solid.fa-bars
  ul.list
    li.list-item
      a(href='/dashboard')
        i.fa-solid.fa-house
        span.link-name Dashboard
    li.list-item.active
      a(href='/usersList')
        i.fa-solid.fa-users
        span.link-name Users
    li.list-item
      a(href='/sales')
        i.fa-solid.fa-cart-shopping
        span.link-name Sales
    li.list-item
      a(href='/stock')
        i.fa-solid.fa-truck
        span.link-name Stock
    li.list-item
      a(href='/products')
        i.fa-solid.fa-couch
        span.link-name Products
    li.list-item
      a(href='/settings')
        i.fa-solid.fa-gear
        span.link-name Settings
main.main-content
  nav.navbar.bg-body-tertiary.dashboard-header
    .container-fluid.d-flex.justify-content-end.align-items-center
      .d-flex.align-items-center
        a.logoutBtn(href='/index') Logout
  .stock-form-container
    form#addStock(action='/add' method='post')
      h2 Register New User
      label(for='fname') Full Name
      br
      input#fname(type='text' name='fname' required='')
      br
      br
      label(for='email') Email
      br
      input#email(type="email", name="email", required)
      br
      br
      label(for='tel') Phone Number
      br
      input#tel(type="text", name="tel", required)
      br
      br
      label(for='nin') NIN Number
      br
      input#nin(type='text' name='nin' required)
      br
      br
      label(for='address') Address
      br
      input#address(type='text' name='address' required)
      br
      br
      label(for='username') Username
      br
      input#username(type='text' name='username' required='')
      br
      br
      label(for='password') Password
      br
      input#password(type='text' name='password' required='')
      br
      br
      label(for="role") Select Role:
      br
      select#role(name="role", required)
        option(value, disabled, selected) Select role
        option(value="Manager") Manager
        option(value="Sales agent") Sales agent
      br
      br
      .add
        button.btns(type='submit') Add User
        button.btns(type='reset') Cancel
  script(src='../javascript/products.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js' integrity='sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI' crossorigin='anonymous') 