doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css')
    link(rel='stylesheet' href='..css/receipt.css')
    title Receipt
  body
    .container.mt-4
      header.text-center.mb-4
        h2 MAYONDO WOOD & FURNITURE LTD 
        p B2B wood & Furniture Company
      
      section
        hr
        h3.text-center RECEIPT 
        
        if item
          .receipt-details
            p Date: #{item.date}
            p Customer Name: #{item.name}
            p Customer Contact: #{item.contact}
            p Product Name: #{item.pdtname}
            p Quantity: #{item.quantity}
            p Unit Price: #{item.unitPrice}
            p Total Price: #{Math.round(item.totalPrice)}
        else
          p.text-danger No item data found
        
        hr
        p.text-center Thank You For Choosing Us!
        
        button.btn.btn-primary.mt-3(onclick="window.print()") Print Receipt
        a.btn.btn-secondary.mt-3.ms-2(href="/sales") Back to Home

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js')